extends layout

block content
  .spacer
  .container
    .row
      .col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-1
        a.btn.btn-primary(href='/manage/articles/add') Create Article
        h1= title
          small
            a(href='/manage/categories') Manage Categories
        table.table.table-striped
          tbody
            tr
              th Article Title
              th Category
              th Date Published
              th Author
              th
            each article, i in articles
              tr
                td #{article.title}
                td #{article.category}
                td #{moment(article.created_at).format('DD/MM/YY, HH:mm')}
                td #{article.author}
                td
                  a.btn.btn-defaut(href='/manage/articles/edit/#{article._id}') Edit
