extends layout

block content
  h1= title
  .spacer
  .container
    .row
      .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
        h1= title
        each article, i in articles
          .post-preview
            a(href='/articles/show/#{article._id}')
              h2.post-title
                | #{article.title}
              h3.post-subtitle
                | #{article.subtitle}
            p.post-meta
              | Posted by #{article.author}
              |  on #{moment(article.created_at).format('ddd Do MMM YYYY, HH:mm')}
          hr
        // Pager
        ul.pager
          li.next
            a(href='#') Older Posts â†’
  
